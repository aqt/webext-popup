{
	"manifest_version": 2,
	"author": "aqt",

	"homepage_url": "https://github.com/aqt/webext-popup",
	"name": "__MSG_extensionName__",
	"version": "1.5.1",
	"description": "__MSG_extensionDescription__",

	"default_locale": "en",

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png"
	},

	"permissions": [
		"activeTab",
		"bookmarks",
		"contextMenus",
		"storage",
		"tabs"
	],

	"background": {
		"scripts": [
			"content/_shared/browser-polyfill.min.js",
			"content/background/background.js"
		]
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png"
		},

		"default_title": "__MSG_extensionName__",
		"default_popup": "content/button/panel.html"
	},

	"applications": {
		"gecko": {
			"id": "{7345afcc-32b6-4a3d-8e05-189bc954e9e7}"
		}
	},

	"options_ui": {
		"page": "content/settings/settings.html",
		"browser_style": true
	}
}
